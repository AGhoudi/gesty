{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="my-2">
        <label for="username">{{ 'security.login.username'|trans }}</label>
    </div>

    <div class="form-group text-dark">
        <input style="width: 100%;" type="text" id="username" name="_username" value="" required="required" autocomplete="username" />
    </div>

    <div class="my-2">
        <label for="password">{{ 'security.login.password'|trans }}</label>
    </div>

    <div class="form-group text-dark">
        <input style="width: 100%;" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <div class="my-3">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit" id="_submit" class="btn btn-danger font-weight-bold" name="_submit" value="{{ 'security.login.submit'|trans }}" />

</form>