<body>



<div class="card d-flex justify-content-center" style="width: 40rem; position: absolute; margin: 300px auto;background: linear-gradient(#0d6d65, #168369, #1a8c6b, #1f9a6e);">
    <div class="card-body">

            <div class="well">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}

                <div class="form-group">
                    {# Génération du label. #}
                    <h5 class="text-center font-weight-bold" style="font-family: 'Lobster', cursive; color: #fb6a4c;">{{ form_label(form.list, "Ma liste de tâches")}}</h5>

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.list) }}

                    <div class="col-sm-10 container">
                        {# Génération de l'input. #}
                        {{ form_widget(form.list, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="container d-flex justify-content-center my-3">{{ form_widget(form.ajouter, {'attr': {'style': 'background-color: #7E28FF; color: white; font-weight: bold; font-family: Acme'}}) }}</span>
                </div>
                    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}


    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »). #}
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
          <ul  class="container my-3" style="list-style-type: none;">
        {% for advert in listAdverts %}
            <li class=" my-2 font-weight-bold text-center" style="background-color: #FFB51B; padding-left: 20px; padding-right: 20px; font-family: 'Lobster', cursive; color: #000; border-bottom-left-radius: 5px; border-bottom-right-radius: 5px; border-top-left-radius: 5px; border-top-right-radius: 5px; border: 3px solid #FFB51B;"><h5 style="display: flex; justify-content: center"><div class="form-check">
                        <input class="form-check-input position-static" type="checkbox" id="blankCheckbox" value="option1" aria-label="...">
                    </div>{{ advert.list }}</h5><div style="display: flex; justify-content: center"><a type="button" class="btn btn-success d-flex justify-content-center" style="border-bottom-left-radius: 5px; border-bottom-right-radius: 5px; border-top-left-radius: 5px; border-top-right-radius: 5px;" href="{{ path('oc_project_edit', {'id': advert.id}) }}"><i class="fas fa-edit"></i>modifier</a><a type="button" class="btn btn-danger d-flex justify-content-center text-center" style="margin-left: 20px;border-bottom-left-radius: 5px; border-bottom-right-radius: 5px; border-top-left-radius: 5px; border-top-right-radius: 5px;" href="{{ path('oc_project_delete', {'id': advert.id}) }}"><i class="fas fa-window-close float-right"></i> supprimer</a><br></div></li>
        {% endfor %}
    </ul>
        </div>
    </div>


    </div>


