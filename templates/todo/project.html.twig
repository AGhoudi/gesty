{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Projets{% endblock %}

{% block header %}
    <div class="header-content clearfix">
        <a class="logo" href="{{ path('home') }}">GESTY</a>
        <nav class="navigation" role="navigation">
            <ul class="primary-nav">
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="{{ path('member') }}">Espace membre</a></li>
                <li><a  class="espace" href=""><i class="fas fa-user vert"></i>{{ app.user.username }}</a></li>
                <li><a class="deconnect" href="{{ path('logout') }}"><i class="fas fa-user rouge"></i>Se déconnecter</a></li>
            </ul>
        </nav>
        <a href="#" class="nav-toggle">Menu<span></span></a>
    </div><!-- header content -->
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center" style="margin-top: 200px; width: 100%;">
        <h2  class="text-white text-center my-5" >L'outil gestionnaire de projets vous permettra de mettre en place <br> vos projets</h2>
    </div>
    <div class="container" style="margin-top: 350px; width: 100%;">
        <img src="{{ asset('build/images/paper.jpg') }}" class="img-thumbnail" alt="" style="max-height: 500px;min-width: 100%;">
    </div>
    <div class="container my-3">
        <p class="d-flex justify-content-center"><a type="button" class="btn btn-danger d-flex justify-content-center text-center bn_membre" href="{{ path('member') }}">
                <i class="fas fa-chevron-circle-left  mr-2 mt-1"></i> Retourner à l'espace membre
            </a>
        </p>
    </div>
    <div class="container d-flex justify-content-center">
        <h3 style="font-family: 'Lobster', cursive; color: #e84545;">Titre du projet</h3>
    </div>
    <div class="container d-flex justify-content-center my-2">
        {{ form_start(projectForm) }}

        {{ form_widget(projectForm.title, {'attr': {'placeholder': 'Titre de mon projet'}}) }}
        <h3 class="text-center my-2" style="font-family: 'Lobster', cursive; color: #e84545;">Description du projet</h3>
        {{ form_widget(projectForm.content, {'attr': {'placeholder': 'Description de mon projet'}}) }}

        <span class="container d-flex justify-content-center my-3">
            {{ form_widget(projectForm.submit, { 'label': 'Ajouter mon projet' , 'attr': {'class': 'add_todo'}}) }}
        </span>

        {{ form_end(projectForm) }}
    </div>

    <ul  class="container my-3 liste">

        {% for project in listProject %}

            <li class=" my-2 font-weight-bold text-center">

                <div class="d-flex flex-row justify-content-center">
                    <h4  class="text-center titre mt-1">{{ project.title }}</h4>
                </div>

                <div class="d-flex flex-row justify-content-center">
                    <p  class="text-center titre mt-1">{{ project.content }}</p>
                </div>

                <div class="lien" >

                    <a type="button" class="btn d-flex justify-content-center my-2" >
                        <i class="fas fa-edit  mr-1 mt-1"></i>modifier
                    </a>

                    <a type="button" class="btn d-flex justify-content-center text-center my-2 delete" id="{{ project.id }}">
                        <i class="fas fa-window-close  mr-2 mt-1"></i> supprimer
                    </a><br>

                </div>

                <div class="result my-2">

                    <div class="alert alert-success modify_todo" role="alert" style="height: auto;">
                        <h5 class="modify_title">Modifier mon lien</h5>
                        <input type="text" class="form-control">
                        <button class="btn btn-success mt-2 mod_button" id="{{ project.id }}">Modifier</button>
                    </div>

                </div>

            </li>

        {% endfor %}

    </ul>


{% endblock %}